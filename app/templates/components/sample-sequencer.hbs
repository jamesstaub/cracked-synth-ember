{{#each tracks as |track| }}
  <div class="track-wrapper {{if (eq currentTrackDisplay track.id) 'is-selected'}}">
    <label class="track-select-label">
      {{radio-button value=track.id
        class="track-select-radio"
        name="track-display-toggle"
        checked=currentTrackDisplay}}
    </label>

    {{sampler-track
      filePath=track.filePath
      fileName=track.fileName
      outputSelector='#master-compressor'
      isSelected=(eq currentTrackDisplay track.id)
      eucParams=track.eucParams
    }}

  </div>
{{/each}}

<div class="mastercontrols">
  <label for="lo">master volume</label>
  <input
    id="lo"
    type="range"
    onchange={{action "setDacGain"}}
    onmousemove={{action "setDacGain"}}
    name="dacGain"
    min=0 max=85 steps=25
  >
</div>
